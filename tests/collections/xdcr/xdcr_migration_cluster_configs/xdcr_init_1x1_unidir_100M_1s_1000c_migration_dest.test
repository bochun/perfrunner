[test_case]
test = perfrunner.tests.xdcr.UniDirXdcrInitTest

[showfast]
title = Avg. initial XDCR rate (items/sec), 1 -> 1 (2 source nozzles, 4 target nozzles), 1 bucket x 100M x 1KB, s=1, c=1000
component = xdcr
category = init_single
orderby = default

[stats]
server_processes = goxdcr

[cluster]
mem_quota = 204800
initial_nodes = 1
num_buckets = 1

[collection]
config = collections/1bucket_1scope_1000collections_basic.json

[bucket]
replica_number = 0

[xdcr_cluster]
