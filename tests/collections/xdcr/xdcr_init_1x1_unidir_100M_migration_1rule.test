[test_case]
test = perfrunner.tests.xdcr.CollectionMigrationTest

[showfast]
title = Avg. XDCR rate (items/sec), 1 -> 1, 1 bucket x 100M x 1KB, Migration, Default_Bucket -> 1 Collection
component = xdcr
category = init_single
orderby = aa

[stats]
server_processes = goxdcr

[cluster]
mem_quota = 204800
initial_nodes = 1 1
num_buckets = 1

[bucket]
replica_number = 0

[xdcr_cluster]
sourceNozzlePerNode = 2
targetNozzlePerNode = 4

[load]
items = 100000000
size = 1024
workers = 1
doc_gen = large_grouped_doc

[xdcr]
initial_collection_mapping = {"REGEXP_CONTAINS(state, \"0\")":"scope-1:collection-1"}

[clients]
libcouchbase = 3.0.2
python_client = git+https://github.com/couchbase/couchbase-python-client@a193cbdc7763aa3fa563bd8d139091a4c220a240