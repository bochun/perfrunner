[test_case]
test = perfrunner.tests.kv.PillowFightTest

[showfast]
title = Max ops/sec, cbc-pillowfight, 4 nodes, 0/100 R/W, 512B JSON items, batch size = 1, Persist Majority, s=1 c=1000
component = kv
category = max_ops
orderby = zd1

[cluster]
mem_quota = 51200
initial_nodes = 4
num_buckets = 1

[bucket]
replica_number = 2

[collection]
config = collections/1bucket_1scope_1000collections_basic.json

[load]
size = 512
items = 20000000
workers = 128
doc_gen = json
durability = 0

[access]
batch_size = 1
items = 20000000
iterations = 100000
workers = 128
updates = 100
durability = 3

[clients]
libcouchbase = 3.0.1
pillowfight = commit:3.0.0:803ae523f2fd487e67a610f46e64beb908f7c3d9
python_client = git+https://github.com/couchbase/couchbase-python-client@e3a92f20fad3a78ca8313bdab4a9ea6cd9866e73
