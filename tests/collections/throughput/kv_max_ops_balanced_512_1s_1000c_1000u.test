[test_case]
test = perfrunner.tests.kv.PillowFightTest

[showfast]
title = Max ops/sec, cbc-pillowfight, 2 nodes, 50/50 R/W, 512B JSON items, 1K batch size, s=1 c=1000, 1000 Users
component = kv
category = max_ops
orderby = mixed

[cluster]
mem_quota = 51200
initial_nodes = 2
num_buckets = 1

[collection]
