[test_case]
test = perfrunner.tests.kv.FragmentationTest

[showfast]
title = Memory fragmentation (%%), 1 bucket x 5M x 1KB, s=1 c=1000
component = kv
category = memory

[cluster]
mem_quota = 40960
initial_nodes = 1
num_buckets = 1

[bucket]
replica_number = 0

[collection]
config = collections/1bucket_1scope_1000collections_basic.json

[load]
items = 5000000

[clients]
libcouchbase = 3.0.1
python_client = git+https://github.com/couchbase/couchbase-python-client@e3a92f20fad3a78ca8313bdab4a9ea6cd9866e73
