[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest

[showfast]
title = UP3, Key-Value Update, s=1 c=1
component = n1ql
category = iud

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[compaction]
db_percentage = 100

[collection]
config = collections/1bucket_1scope_1collection_basic.json

[bucket]
replica_number = 0

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = reverse_lookup

[access]
items = 20000000
workers = 0
time = 1200
n1ql_op = update
n1ql_queries = key-value-update
n1ql_workers = 480

[n1ql-key-value-update]
statement = UPDATE `bucket-1` USE KEYS [$1] SET name = name||'_UPDATED';
args = ["{key}"]

[clients]
libcouchbase = 3.0.2
python_client = git+https://github.com/couchbase/couchbase-python-client@a193cbdc7763aa3fa563bd8d139091a4c220a240

