[test_case]
test = perfrunner.tests.n1ql.N1QLLatencyTest

[showfast]
title = Q1, Key-Value Lookup, 10K queries/sec, s=1 c=1
component = n1ql
category = Q1_Q3
sub_category = KV

[cluster]
mem_quota = 2048
index_mem_quota = 1000
initial_nodes = 2
num_buckets = 1

[bucket]
replica_number = 0

[collection]
config = collections/1bucket_1scope_1collection_basic.json

[compaction]
db_percentage = 100

[load]
items = 20000
size = 1024
workers = 80
doc_gen = reverse_lookup

[access]
items = 20000
workers = 0
n1ql_queries = key-value-lookup
n1ql_throughput = 999999999
n1ql_workers = 100
time = 60

[n1ql-key-value-lookup]
statement = SELECT * FROM `bucket-1` USE KEYS[$1];
args = ["{key}"]

[clients]
libcouchbase = 3.0.2
python_client = git+https://github.com/couchbase/couchbase-python-client@8d5820a297b35378d314eb399c041b214aa6a7db


