[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest

[showfast]
title = CI18, Range Scan with Limit and Offset (1K), Covering, Plasma, not_bounded, s=1 c=1 i=1
component = n1ql
category = pagination
sub_category = Plasma

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[compaction]
db_percentage = 100

[collection]
config = collections/1bucket_1scope_1collection_basic.json

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = plasma

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = reverse_lookup

[index]
fields = capped_small,name,email
indexes_per_collection = 1
top_down = True

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 30000
items = 20000000
workers = 20
time = 1200
n1ql_queries = page-query
n1ql_workers = 120
workload_instances = 2

[n1ql-page-query]
statement = SELECT name, email FROM `bucket-1` WHERE capped_small > $1 ORDER BY capped_small OFFSET 1000 LIMIT 10;
scan_consistency = not_bounded
args = ["{capped_small}"]
