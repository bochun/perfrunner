[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest

[showfast]
title = CI19, Composite Filters (1000 -> 1), Covered, Plasma, not_bounded, s=1 c=1 i=1
component = n1ql
category = API2
sub_category = Plasma

[cluster]
mem_quota = 40960
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[compaction]
db_percentage = 100

[collection]
config = collections/1bucket_1scope_1collection_basic.json

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = plasma

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = reverse_range_lookup
range_distance = 4

[index]
fields = capped_small,email,name
indexes_per_collection = 1
top_down = True

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 30000
items = 20000000
workers = 20
time = 1200
n1ql_queries = composite
n1ql_throughput = 1000000
n1ql_workers = 180

[n1ql-composite]
statement = SELECT name FROM `bucket-1` WHERE capped_small BETWEEN $1 AND $2 AND email = $3;
args = ["{capped_small}","{capped_small_range}","{email}"]
scan_consistency = not_bounded

[clients]
libcouchbase = 3.0.2
python_client = 3.0.4