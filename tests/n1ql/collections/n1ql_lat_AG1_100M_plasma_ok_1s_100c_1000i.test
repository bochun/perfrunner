[test_case]
test = perfrunner.tests.n1ql.TpcDsLatencyTest

[showfast]
title = AG1, Aggregation query, Plasma, not_bounded, s=1 c=100 i=1000
component = n1ql
category = aggregation
sub_category = Latency

[cluster]
mem_quota = 50000
index_mem_quota = 300000
initial_nodes = 6
num_buckets = 1

[bucket]
replica_number = 0

[collection]
config = collections/1bucket_1scope_100collections_basic.json

[secondary]
indexer.settings.storage_mode = plasma

[import]
import_file = /home/backups/tpc-ds.json
docs_per_collection = 1000000

[load]
doc_gen = tpc_ds

[index]
fields = DATE_PART_STR(sold_date, 'year'),customer.state,store,quantity
indexes_per_collection = 10
top_down = True

[access]
items = 1000000
time = 600
n1ql_queries = aggregation
n1ql_batch_size = 10
n1ql_workers = 1

[n1ql-aggregation]
statement = SELECT store, AVG(quantity) AS avg_quantity FROM `bucket-1` WHERE DATE_PART_STR(sold_date, 'year') = $1 AND customer.state = $2 GROUP BY store;
scan_consistency = not_bounded
args = [{year}, "{state}"]
