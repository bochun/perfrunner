[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest

[showfast]
title = Q2, Singleton Unique Lookup, Plasma, DGM, not_bounded, s=1 c=1 i=1
component = n1ql
category = dgm

[cluster]
mem_quota = 53248
index_mem_quota = 20480
initial_nodes = 6
num_buckets = 1
kernel_mem_limit = 32G

[compaction]
db_percentage = 100

[collection]
config = collections/1bucket_1scope_1collection_basic.json

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = plasma

[load]
items = 150000000
size = 1024
workers = 100
doc_gen = reverse_lookup

[index]
fields = email
indexes_per_collection = 1

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 30000
items = 150000000
workers = 20
time = 3600
n1ql_queries = singleton-unique-lookup
n1ql_workers = 120
workload_instances = 2

[n1ql-singleton-unique-lookup]
statement = SELECT * FROM `bucket-1` WHERE email = $1;
scan_consistency = not_bounded
args = ["{email}"]
