[test_case]
test = perfrunner.tests.magma.WarmupDGMTest

[showfast]
title = Warmup time (min), 4 nodes, 1 bucket x 1B x 1KB, Magma
component = hidd
category = warmup

[cluster]
mem_quota = 10240
initial_nodes = 4
num_buckets = 1
kernel_mem_limit = 20G
kernel_mem_limit_services = kv
