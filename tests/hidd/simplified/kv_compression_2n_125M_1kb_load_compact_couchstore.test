[test_case]
test = perfrunner.tests.magma.CompressionMagmaTest

[showfast]
title = 2 nodes, 125M x 1KB, Load + Compact, Couchstore
component = hidd
category = compress

[cluster]
mem_quota = 51200
initial_nodes = 2
num_buckets = 1
kernel_mem_limit = 60G
kernel_mem_limit_services = kv
enable_cpu_cores = false

[bucket]
eviction_policy = fullEviction

[compaction]
db_percentage = 100

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 64

[load]
items = 125000000
size = 1024
workers = 100

[clients]
libcouchbase = 2.9.3
python_client = 2.5.0