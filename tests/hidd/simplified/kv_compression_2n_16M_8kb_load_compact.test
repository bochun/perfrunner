[test_case]
test = perfrunner.tests.magma.CompressionMagmaTest

[showfast]
title = 2 nodes, 15.625M x 8KB, Load + Compact, Magma
component = hidd
category = compress

[cluster]
mem_quota = 51200
initial_nodes = 2
num_buckets = 1
kernel_mem_limit = 60G
kernel_mem_limit_services = kv
enable_cpu_cores = false

[bucket]
eviction_policy = fullEviction
backend_storage = magma

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 64

[load]
items = 15625000
size = 8192
workers = 100

[clients]
libcouchbase = 2.9.3
python_client = 2.5.0