[test_case]
test = perfrunner.tests.magma.MixedLatencyDGMTest

[showfast]
title = Latency(ms), Workload S0.6, 2 nodes, 250M x 1KB, 20K ops/sec (33/34/33 C/R/W), Uniform distribution, Couchstore
component = hidd
category = latency

[cluster]
mem_quota = 6144
initial_nodes = 2
num_buckets = 1
num_vbuckets = 256
kernel_mem_limit = 12G
kernel_mem_limit_services = kv
enable_cpu_cores = false

[bucket]
eviction_policy = fullEviction

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 64
backend = couchdb;cursor_dropping_checkpoint_mem_upper_mark=100

[load]
items = 250000000
size = 1024
workers = 100
key_fmtr = hex
doc_gen = large

[access]
creates = 33
reads = 34
updates = 33
deletes = 0
items = 250000000
workers = 60
throughput = 20000
time = 3600
requestdistribution = uniform
