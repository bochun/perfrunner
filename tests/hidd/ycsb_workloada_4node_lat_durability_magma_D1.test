[test_case]
test = perfrunner.tests.magma.YCSBLatencyHiDDTest

[showfast]
title = Latency (ms), SDK 3, Durability Persist Majority, 4 nodes, 1 bucket x 1B x 1KB, Workload A, Magma
component = hidd
category = durability
