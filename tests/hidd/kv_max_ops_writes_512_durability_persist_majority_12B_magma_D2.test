[test_case]
test = perfrunner.tests.magma.PillowFightDGMTest

[showfast]
title = Max ops/sec, cbc-pillowfight, 4 nodes, 0/100 R/W, 1 bucket x 12B x 512B JSON items, batch size = 1, Persist Majority, Magma
component = hidd
category = ops

[cluster]
mem_quota = 15360
initial_nodes = 4
num_buckets = 1
kernel_mem_limit = 25G
