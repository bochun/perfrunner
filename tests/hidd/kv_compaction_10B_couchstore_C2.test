[test_case]
test = perfrunner.tests.magma.CompactionMagmaTest

[showfast]
title = Full compaction time (min), 4 nodes, 10B x 1KB, 15K ops/sec (90/10 R/W), 5%% cache miss rate, Couchstore
component = hidd
category = compact

[cluster]
mem_quota = 51200
initial_nodes = 4
num_buckets = 1
kernel_mem_limit = 60G
kernel_mem_limit_services = kv
enable_cpu_cores = false

[bucket]
eviction_policy = fullEviction

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 64

[compaction]
db_percentage = 100

[load]
items = 10000000000
size = 1024
workers = 128
key_fmtr = hex
doc_gen = large

[hot_load]
items = 10000000000
workers = 128
working_set = 1

[access]
creates = 0
reads = 90
updates = 10
deletes = 0
items = 10000000000
working_set = 1
working_set_access = 95
workers = 128
throughput = 15000
async = 1
