[test_case]
test = perfrunner.tests.magma.EnhancedDurabilityLatencyDGMTest

[showfast]
title = latency (ms), 4 nodes, 1 bucket x 1B x 1KB, 0/100 R/W, Unlimited Ops, Durability Persist Majority, Couchstore
component = hidd
category = latency

[cluster]
mem_quota = 15360
initial_nodes = 4
num_buckets = 1
kernel_mem_limit = 25G
kernel_mem_limit_services = kv
enable_cpu_cores = false

[bucket]
replica_number = 2
eviction_policy = fullEviction

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 64

[load]
items = 1000000000
size = 1024
workers = 128
doc_gen = large

[extra_access]
updates = 100
creates = 0
deletes = 0
reads = 0
workers = 128
items = 1000000000
ops = 0
time = 86400
requestdistribution = uniform
power_alpha = 0
zipf_alpha = 0
durability = 0
async = 0

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
items = 1000000000
workers = 128
time = 3600
durability = 3

[clients]
libcouchbase = 3.0.2
python_client = git+https://github.com/couchbase/couchbase-python-client@a193cbdc7763aa3fa563bd8d139091a4c220a240
