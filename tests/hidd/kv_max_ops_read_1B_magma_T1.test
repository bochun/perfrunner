[test_case]
test = perfrunner.tests.magma.PillowFightDGMTest

[showfast]
title = Max ops/sec, cbc-pillowfight, 4 nodes, 20/80 R/W, 1 bucket x 1B x 512B JSON items, 1K batch size, Magma
component = hidd
category = ops

[cluster]
mem_quota = 5120
initial_nodes = 4
num_buckets = 1
kernel_mem_limit = 15G
kernel_mem_limit_services = kv
enable_cpu_cores = false

[bucket]
eviction_policy = fullEviction
backend_storage = magma

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 64

[load]
size = 512
items = 1000000000
workers = 128
doc_gen = json

[extra_access]
updates = 100
creates = 0
deletes = 0
reads = 0
workers = 128
items = 1000000000
ops = 1000000000
time = 86400
throughput = 1000000000
requestdistribution = uniform
power_alpha = 0
zipf_alpha = 0
durability = 0
async = 0

[access]
creates = 0
reads = 20
updates = 80
deletes = 0
items = 1000000000
iterations = 100000
workers = 128
