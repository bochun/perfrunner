[test_case]
test = perfrunner.tests.magma.YCSBDurabilityThroughputHiDDTest

[showfast]
title = Durability Persist Majority, 1 client, 128 threads, YCSB SLO, SDK 3, 4 nodes, 1 bucket x 1B x 1KB, Workload A, Magma
component = hidd
category = durability
sub_category = SLO
orderby = d311

[cluster]
mem_quota = 15360
initial_nodes = 4
num_buckets = 1
kernel_mem_limit = 25G
kernel_mem_limit_services = kv

[compaction]
db_percentage = 100

[bucket]
replica_number = 2
backend_storage = magma

[load]
workload_path = workloads/workloada
items = 1000000000
workers = 128
ycsb_client = couchbase3

[access]
durability = 3
workload_path = workloads/workloada
items = 1000000000
ops = 100000000
time = 10800
workers = 128
workload_instances = 1
ycsb_client = couchbase3
enable_mutation_token = true
kv_endpoints = 64
timeseries = 1

[ycsb]
branch = couchbase3-new-durability
latency_percentiles = 98

[stats]
client_processes = java

