[test_case]
test = perfrunner.tests.fts.FTSIndexTest

[showfast]
title = Index build time, initial (sec), wiki 1M x 1KB, 3 node, FTS, 100 collections per index, s=1 c=1000 i=10
component = jts
category = 1M
sub_category = Index
orderby = q0b00000000

[cluster]
