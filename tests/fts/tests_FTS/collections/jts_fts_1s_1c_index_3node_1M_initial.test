[test_case]
test = perfrunner.tests.fts.FTSIndexTest

[showfast]
title = Index build time, initial (sec), wiki 1M x 1KB, 3 node, FTS, s=1 c=1
component = jts
category = 1M
sub_category = Index
orderby = q0b00000000

[cluster]
mem_quota = 51024
initial_nodes = 3
num_buckets = 1
fts_index_mem_quota = 20000

[collection]
config = collections/1bucket_1scope_1collection_basic.json

[jts]
jts_repo_branch = SDK3
collections = 1
scope = 1
test_collections_flag = 1
test_docid_use_long = 1
test_total_docs = 1000000
couchbase_index_name = perf_fts_index
couchbase_index_configfile = tests/fts/index/fts_tvectors_off.json

[restore]
backup_storage =  /fts/backup
backup_repo =  fts_wiki

[profiling]
services = fts
