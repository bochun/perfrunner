[test_case]
test = perfrunner.tests.magma.YCSBThroughputLatencyHIDDPhaseTest

[showfast]
title = 3 nodes, 1 bucket x 5KB, SDK2, Magma
component = hidd
category = ycsb

[cluster]
mem_quota = 10240
initial_nodes = 3
num_buckets = 1
enable_cpu_cores = false

[bucket]
replica_number = 1
eviction_policy = fullEviction
backend_storage = magma

[bucket_extras]
num_reader_threads = 32
num_writer_threads = 32

[load]
workload_path = workloads/workloada
ycsb_client = couchbase2
items = 100000000
field_length = 100
field_count = 50
size = 5000
workers = 25
workload_instances = 4
inserts_per_workerinstance = 25000000
timeseries = 1
phase = 4

[access]
workload_path = workloads/workloada
ycsb_client = couchbase2
items = 100000000
field_length = 100
field_count = 50
ops = 40000000
workers = 25
workload_instances = 4
timeseries = 1

[ycsb]
latency_percentiles = 95,99
average_latency = 1
branch = couchbase3

[stats]
client_processes = java